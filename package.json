{
  "name": "xhelpers-api",
  "version": "4.1.6",
  "description": "xhelpers-api is an open source project that enables developers to easily create and manage micro-services into their own environment",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "test": "NODE_ENV=TEST tsc -p tsconfig.json && $(npm root)/.bin/mocha -r ts-node/register --exit --no-timeouts --reporter=spec --recursive src/test/**.spec.ts",
    "test:coverage": "$(npm root)/.bin/nyc npm run test",
    "cover:report": "nyc report --reporter=lcov",
    "tsc": "tsc"
  },
  "keywords": [
    "api",
    "nodejs",
    "api",
    "typescript",
    "hapijs",
    "jwt",
    "joi",
    "boom",
    "swagger",
    "mongodb",
    "mongoose",
    "mysql",
    "sequelize",
    "helpers",
    "common",
    "shared",
    "sentry"
  ],
  "author": "xhelpers",
  "repository": {
    "type": "git",
    "url": "git://github.com/xhelpers/xhelpers-api.git"
  },
  "license": "ISC",
  "engines": {
    "node": ">=18.14.1"
  },
  "bugs": {
    "url": "https://github.com/xhelpers/xhelpers-api/issues"
  },
  "homepage": "https://github.com/xhelpers/xhelpers-api#readme",
