  "scripts": {
    "build": "tsc",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "test": "NODE_ENV=TEST tsc -p tsconfig.json && $(npm bin)/mocha -r ts-node/register --exit --no-timeouts --reporter=spec --recursive src/test/**.spec.ts",
